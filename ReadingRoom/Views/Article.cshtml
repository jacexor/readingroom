@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.IArticlePageViewModel>
@using ContentModels = ReadingRoom.Models.ViewModels.Interfaces;
@{
    Layout = "master.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row gy-5">
        <div class="col-12 col-lg-4">

            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <div class="text-container">
                        <p>
                            @Model.Intro
                        </p>
                    </div>
                    <div class="text-container">
                        <p>
                            @Html.Raw(Model.Body)
                        </p>
                    </div>
                    <div class="text-container">
                        <p>
                            @Model.ReadCount min read.
                        </p>
                    </div>
                    <div>
                        <img src="@Model.HeroImage.MediaUrl()" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>